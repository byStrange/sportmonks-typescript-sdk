{
  "name": "sportmonks-typescript-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for SportMonks Football API v3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "sportmonks",
    "api",
    "football",
    "soccer",
    "typescript",
    "sdk",
    "sports",
    "data"
  ],
  "author": "Rahul Keerthi <getintouch@withqwerty.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rahulkeerthi/sportmonks-typescript-sdk.git"
  },
  "homepage": "https://github.com/rahulkeerthi/sportmonks-typescript-sdk#readme",
  "bugs": {
    "url": "https://github.com/rahulkeerthi/sportmonks-typescript-sdk/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/index.ts"
    ]
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'npm run typecheck'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
